<div class = container>
    <br>
    제목 : <%= @show_post.title %><br>
    <hr>
    작성자 : <%= @show_post.editor %><br>
    <hr>
    내용 : <%= @show_post.content %><br>
    <hr>
    
    <a href = "/edit/<%= @show_post.id %>">[수정]</a>
    <a href = "/delete/<%= @show_post.id %>">[삭제]</a>
    <br>
    <hr>
    <br>
    
    
    <div class = "well">
        <% @show_post.replies.each do |r| %>
            댓글 내용 : <%= r.content %><br>
            댓글 작성자 : <%= r.editor %><br>
            <a href = "/reply_delete/<%= r.id %>">[댓글삭제]</a><br>
            <hr>
        <% end %>
        
        <form action = "/reply_create" method="POST">
            <div class="form-group">
                <input type="hidden" name="post_id" value="<%= @show_post.id %>">
                <label for="inputReplycomment">댓글 내용</label>
                <textarea class="form-control" name = "content" rows="5" placeholder = "내용을 입력하세요" id="content"></textarea>
            </div>
            <div class="form-group">
                <label for="inputEditor">댓글 작성자</label>
                <input type="text" name = "editor" class="form-control" id="content" aria-describedby="emailHelp" placeholder="이름을 입력해주세요">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>